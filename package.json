{
  "prettier": {
    "printWidth": 120,
    "plugins": [
      "prettier-plugin-sh"
    ],
    "overrides": [
      {
        "files": "*.sql",
        "options": {
          "formatter": "sql-formatter",
          "language": "mysql",
          "database": "mysql",
          "newlineBeforeSemicolon": false,
          "commaPosition": "after",
          "denseOperators": false,
          "expressionWidth": 1000
        }
      },
      {
        "files": "./sql/schema/*.sql",
        "options": {
          "commaPosition": "after",
          "expressionWidth": 100
        }
      }
    ]
  },
  "private": true,
  "license": "private",
  "scripts": {
    "format": "prettier --list-different -w ./sql/"
  },
  "dependencies": {
    "prettier": "^2.8.4",
    "prettier-plugin-sh": "^0.12.8",
    "prettier-plugin-sql": "^0.12.1"
  }
}
